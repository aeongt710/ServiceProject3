<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServiceProject3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav id="navheader" style="background-color:#1A1A1A; color:#0366d6;" class="navbar navbar-expand-sm  navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color:#0366d6;" asp-area="" asp-page="/Index">Service Seeking Paksitan</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="color:#0366d6;">
                            <a class="nav-link " asp-area="" style="color:#0366d6;" asp-page="/Index">Home</a>
                        </li>

                        @if (User.IsInRole("Seeker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="color:#0366d6;" asp-area="" asp-page="/Services/Index">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="color:#0366d6;" asp-area="" asp-page="/Materials/Index">Materials</a>
                            </li>

                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" style="color:#0366d6;" asp-area="" asp-page="/Cate/Index">Service Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"  style="color:#0366d6;" asp-area="" asp-page="/MatCate/Index">Material Categories</a>
                            </li>

                        }
                        @*@if (User.IsInRole("RolesManager"))
                            {*@
                        @*                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Roles/Index">Roles</a>

                            </li>*@

                        @*}*@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ServiceProject3 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
