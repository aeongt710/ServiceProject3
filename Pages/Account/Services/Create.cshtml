@page
@model ServiceProject3.Pages.Account.Services.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.Name" class="control-label"></label>
                <input asp-for="Service.Name" class="form-control" />
                <span asp-validation-for="Service.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Payment Mode</label>
                <select id="mainSelect" name="number" onchange="contractCheck()" class="form-control">
                    <option value="1">Hourly</option>
                    <option value="2">Contract Based</option>
                </select>
            </div>
            <div class="form-group" id="asd">
                <label asp-for="Service.HourlyRate" class="control-label"></label>
                <input asp-for="Service.HourlyRate" class="form-control" />
                <span asp-validation-for="Service.HourlyRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Description" class="control-label"></label>
                <input asp-for="Service.Description" class="form-control" />
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            @*            <div class="form-group">
                <label asp-for="Service.UserId" class="control-label"></label>
                <select asp-for="Service.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
                </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    console.log("JS First line");
    function contractCheck()
    {
        console.log("Inside contractCheck ");
        var a=document.getElementById("mainSelect").value;
        console.log("value is",a)
        if(a=="1")
        {
            var b=document.getElementById("asd");
            b.style.display="block";

        }else if(a=="2"){
            var b=document.getElementById("asd");
            b.style.display="none";
        }
    }
</script>

<div>
    <a asp-page="Index">Back to List</a>
</div>

