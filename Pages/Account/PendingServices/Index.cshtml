@model ServiceProject3.Pages.Account.PendingServices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].Seeker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].ApprovalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].CompletionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceBought[0].Review)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiceBought) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeekerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
