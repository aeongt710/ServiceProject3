@page
@model ServiceProject3.Pages.Account.Materials.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Material.Id" />
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Price" class="control-label"></label>
                <input asp-for="Material.Price" class="form-control" />
                <span asp-validation-for="Material.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Description" class="control-label"></label>
                <input asp-for="Material.Description" class="form-control" />
                <span asp-validation-for="Material.Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Material.MaterialCategoryId" class="control-label"></label>
                <input asp-for="Material.MaterialCategoryId" class="form-control" />
                <span asp-validation-for="Material.MaterialCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Material.UserId" class="control-label"></label>
                <select asp-for="Material.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Material.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
