        <tr>
            <th>
                Service @Html.DisplayNameFor(model => model.MaterialBought[0].Material.Name)
            </th>
            <th>
                Seeker @Html.DisplayNameFor(model => model.MaterialBought[0].Seeker.Email)
            </th>
            <th>
